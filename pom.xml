<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
				 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.5.7</version>
		<relativePath/>
	</parent>

	<groupId>no.nav.soknad.arkivering</groupId>
	<artifactId>soknadsmottaker</artifactId>
	<version>1.1.0</version>
	<packaging>pom</packaging>
	<name>soknadsmottaker</name>
	<description>Receives benefit applications</description>

	<properties>
		<spring-boot.version>3.5.7</spring-boot.version>
		<java.version>21</java.version>
		<kotlin.version>2.2.21</kotlin.version>
		<maven.version>3.8.8</maven.version>

		<!--Kotlin-->
		<kotlin-serialization.version>1.9.0</kotlin-serialization.version>
		<coroutines.version>1.10.2</coroutines.version>

		<!--Spring-->
		<springdoc-openapi.version>2.8.13</springdoc-openapi.version>
		<spring-web.version>6.2.12</spring-web.version>
		<spring-cloud.version>4.3.0</spring-cloud.version>

		<!--Serialization-->
		<jackson.version>2.20.1</jackson.version>
<!--
 		Kall for å sende inn søknader feiler ved oppdatering til 2.19.0, mangler annotation for optBoolean
		<jackson.version>2.19.0</jackson.version>
-->
		<jackson-databind-nullable.version>0.2.8</jackson-databind-nullable.version>
		<gson.version>2.13.2</gson.version>

		<!--NAV-->
		<token-support.version>5.0.34</token-support.version>

		<!--Kafka-->
		<confluent.version>8.1.0</confluent.version>
		<brukernotifikasjon-schemas.version>2.5.2</brukernotifikasjon-schemas.version>
		<utkast-schema.version>20230203100430-ecf5208</utkast-schema.version>
		<arkivering-schemas.version>1.4.4-bf301c4492e2</arkivering-schemas.version>
		<tms-varsel.version>2.1.1</tms-varsel.version>

		<!--Logging-->
		<logstash.version>9.0</logstash.version>
		<prometheus.version>1.4.2</prometheus.version>

		<!--Jakarta-->
		<jakarta-servlet-api.version>6.1.0</jakarta-servlet-api.version>
		<jakarta-validation-api.version>3.1.1</jakarta-validation-api.version>
		<jakarta-annotation.version>3.0.0</jakarta-annotation.version>

		<!--Other -->
		<okhttp3.version>4.12.0</okhttp3.version>
		<swagger-annotations.version>2.2.40</swagger-annotations.version>

		<!--Test-->
		<mockk.version>1.14.6</mockk.version>
		<springmockk.version>4.0.2</springmockk.version>

		<!--Plugins-->
		<versions-maven-plugin.version>2.19.1</versions-maven-plugin.version>
		<cyclonedx-maven-plugin.version>2.9.1</cyclonedx-maven-plugin.version>
		<maven-enforcer.version>3.6.2</maven-enforcer.version>
		<openapi-generator-maven-plugin.version>7.17.0</openapi-generator-maven-plugin.version>
	</properties>

	<modules>
		<module>api</module>
		<module>mottaker</module>
	</modules>

	<repositories>
		<repository>
			<id>central</id>
			<url>https://repo1.maven.org/maven2</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>versions-maven-plugin</artifactId>
				<version>${versions-maven-plugin.version}</version>
				<configuration>
					<rulesUri>file://${user.dir}/maven-version-rules.xml</rulesUri>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>${maven-enforcer.version}</version>
				<executions>
					<execution>
						<id>enforce-maven</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<banDuplicatePomDependencyVersions/>
								<requireMavenVersion>
									<version>${maven.version}</version>
								</requireMavenVersion>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- https://docs.nais.io/security/salsa/salsa/#known-limitations-->
			<plugin>
				<groupId>org.cyclonedx</groupId>
				<artifactId>cyclonedx-maven-plugin</artifactId>
				<version>${cyclonedx-maven-plugin.version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>makeAggregateBom</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
